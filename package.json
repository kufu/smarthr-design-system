{
  "name": "smarthr-design-system",
  "description": "Documentation page for SmartHR's design system",
  "author": "SmartHR Design System Team",
  "license": "MIT",
  "type": "module",
  "lint-staged": {
    "*.{astro,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/content/**/*.md{,x}": [
      "textlint",
      "tsx scripts/content-checker/linkChecker.ts --fix"
    ]
  },
  "scripts": {
    "dev": "pnpm update:ui-data && astro dev",
    "start": "pnpm dev",
    "build": "pnpm update:ui-data && astro build",
    "build:prod": "pnpm build && pnpm tsx ./scripts/update-algoliasearch.ts",
    "preview": "astro preview",
    "astro": "astro",
    "lint:ts": "eslint 'src/**/*.{astro,ts,tsx}'",
    "lint:check": "pnpm update:ui-data && astro check",
    "lint:text": "textlint 'src/content/**/*.md{,x}'",
    "lint": "run-p lint:*",
    "format:eslint": "eslint --fix 'src/**/*.{astro,ts,tsx}'",
    "format:prettier": "prettier --write .",
    "format:text": "textlint --fix 'src/content/**/*.md{,x}'",
    "format": "run-s format:*",
    "export:zip-images": "tsx ./scripts/zipImages.ts",
    "update:ui-data": "tsx ./scripts/fetch-ui-data.ts",
    "update:smarthr-ui.css": "tsx scripts/update-smarthr-ui-css.ts",
    "generate:thumbnails": "tsx ./scripts/component-thumbnails/componentThumbnails.ts",
    "copy:smarthr-ui-css": "cp node_modules/smarthr-ui/smarthr-ui.css public/",
    "postinstall": "run-s copy:smarthr-ui-css",
    "upgrade:smarthr-ui": "pnpm upgrade smarthr-ui@latest && pnpm copy:smarthr-ui-css",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.9",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/react": "^3.6.3",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "algoliasearch": "^5.23.4",
    "astro": "^4.16.18",
    "clsx": "^2.1.1",
    "marked": "^15.0.11",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-frame-component": "^5.2.7",
    "react-instantsearch": "^7.15.5",
    "react-instantsearch-core": "^7.15.5",
    "react-live": "^4.1.8",
    "smarthr-normalize-css": "^1.1.0",
    "smarthr-ui": "^70.1.0",
    "styled-components": "^6.1.17",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@storybook/types": "^8.6.12",
    "@types/adm-zip": "^0.5.7",
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/parser": "^8.31.0",
    "adm-zip": "^0.5.16",
    "eslint": "^9.25.1",
    "eslint-config-smarthr": "^7.3.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.4.1",
    "gray-matter": "^4.0.3",
    "hast-util-select": "^6.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "node-html-parser": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-config-smarthr": "^1.0.1",
    "prettier-plugin-astro": "^0.14.1",
    "remark": "^15.0.1",
    "remark-emoji": "^5.0.1",
    "sass-embedded": "^1.87.0",
    "sharp": "^0.34.1",
    "textlint": "^14.6.0",
    "textlint-filter-rule-allowlist": "^4.0.0",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-plugin-mdx": "^1.0.2",
    "textlint-rule-preset-smarthr": "^1.35.0",
    "textlint-rule-prh": "^6.1.0",
    "tsx": "^4.19.3",
    "unist-util-visit": "^5.0.0"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
