---
import { TableReel as OriginalTableReel } from 'smarthr-ui';
---

<OriginalTableReel className="tableReel">
  <slot />
</OriginalTableReel>

<style lang="scss">
  // NOTE: globalじゃないと当たらない
  :global(.tableReel) {
    margin-block-start: 20px;

    :global(table) {
      width: 200% !important;
      margin-block-start: 0 !important;

      @include breakpointMobile3 {
        width: 250svw !important;
      }
    }

    :global(th),
    :global(td) {
      min-width: initial;
      box-sizing: content-box;
      font-size: var(--font-size-14);
    }
  }
</style>
