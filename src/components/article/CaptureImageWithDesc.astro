---
type Props = {
  description?: string;
};

const { description } = Astro.props;
---

<figure>
  <slot />
  {description && <figcaption>{description}</figcaption>}
</figure>

<style lang="scss">
  figure {
    display: block;
    margin: 0;
    padding: 0;

    :global(p) {
      height: 208px;
      background-color: var(--color-divider);
    }

    :global(a) {
      display: block;
      height: 208px;
    }

    :global(img) {
      // 高さを親要素に合わせるため、ArticleLayout で指定された高さ (auto) を上書き
      height: 100% !important;
      object-fit: contain;
    }

    figcaption {
      margin-top: 16px;
      font-size: var(--font-size-13);
      line-height: 1.62;
      color: #000;
    }
  }
</style>
