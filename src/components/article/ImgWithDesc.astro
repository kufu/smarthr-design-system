---
type Props = {
  description: string;
};
---

<figure>
  <slot />
  <figcaption>{Astro.props.description}</figcaption>
</figure>

<style lang="scss">
  figure {
    display: block;
    margin: 0;
    padding: 0;
    max-width: 800px;

    figcaption {
      margin-top: 8px;
      font-size: 13px;
      line-height: 1.62;
      color: #000;
    }
  }
</style>
